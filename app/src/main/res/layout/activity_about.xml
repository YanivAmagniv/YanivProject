<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="אודות" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_page_title"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_page_subtitle"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingBottom="24dp" />

            <!-- Introduction Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_intro"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:textAlignment="textStart"
                android:textDirection="rtl"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:paddingBottom="24dp" />

            <!-- Main Features Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_features_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="sans-serif"
                android:textAlignment="textStart"
                android:textDirection="rtl"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_features"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:textAlignment="textStart"
                android:textDirection="rtl"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:paddingBottom="24dp" />

            <!-- Benefits Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_benefits_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="sans-serif"
                android:textAlignment="textStart"
                android:textDirection="rtl"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_benefits"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:textAlignment="textStart"
                android:textDirection="rtl"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:paddingBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 