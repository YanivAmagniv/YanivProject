<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="קבוצות"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnNewGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="101dp"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="152dp" />

    <Button
        android:id="@+id/btnNewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="קבוצה חדשה "
        android:onClick="go_newgroup"
        android:background="@color/button"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/btnExistentGroups"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginBottom="103dp" />

    <Button
        android:id="@+id/btnExistentGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="קבוצה קיימת"
        android:onClick="go_ExistentGroup"
        android:background="@color/button"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNewGroup"
        android:layout_marginBottom="265dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
