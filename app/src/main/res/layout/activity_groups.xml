<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/background">



        <!-- Main Content Below the Toolbar -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קבוצות"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <Button
            android:id="@+id/btnNewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קבוצה חדשה"
            android:background="@color/button"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="go_newgroup"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <Button
            android:id="@+id/btnExistentGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קבוצה קיימת"
            android:background="@color/button"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="go_ExistentGroup"
            app:layout_constraintTop_toBottomOf="@id/btnNewGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnUserDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="פרטי משתמש"
            android:background="@color/button"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="go_UserDetails"
            app:layout_constraintTop_toBottomOf="@id/btnExistentGroups"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnAdminPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="דף מנהל"
            android:background="@color/button"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            android:onClick="goAdminPage"
            app:layout_constraintTop_toBottomOf="@id/btnUserDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חזור"
            android:textSize="18sp"
            android:onClick="goBack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        app:menu="@menu/menus" />

</androidx.drawerlayout.widget.DrawerLayout>
